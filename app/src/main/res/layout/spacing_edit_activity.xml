<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText android:id="@+id/h_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="horizontal padding"
            android:inputType="number"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <EditText android:id="@+id/h_gap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="horizontal gap"
            android:inputType="number"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <EditText android:id="@+id/v_start_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="vertical start padding"
            android:inputType="number"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <EditText android:id="@+id/v_end_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="vertical end padding"
            android:inputType="number"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <EditText android:id="@+id/textSpacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="text spacing"
            android:inputType="number"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <EditText android:id="@+id/dock_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dock padding"
            android:inputType="number"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <EditText android:id="@+id/dock_gap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dock gap"
            android:inputType="number"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <EditText android:id="@+id/folder_gap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="folder gap"
            android:inputType="number"/>
    </LinearLayout>
</ScrollView>
